{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:prettier/recommended", "xo"],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"arrow-parens": 0,
		"no-warning-comments": 0,
		"no-await-in-loop": 0,
		"no-mixed-operators": 0
	}
}
